<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="500" Height="40" x:Name="Loginx"></TextBox>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="500" Height="40" Grid.Row="1" x:Name="Passwordx"></TextBox>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Вход</TextBlock>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Margin="10,10,10,80" x:Name="error"></TextBlock>
        <Button Grid.Row="2" HorizontalAlignment="Center" Width="300" Height="60" Click="Button_Click">Войти</Button>
    </Grid>
</Window>
